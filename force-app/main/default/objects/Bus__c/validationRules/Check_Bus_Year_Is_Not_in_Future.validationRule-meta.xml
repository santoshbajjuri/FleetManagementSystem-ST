<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Bus_Year_Is_Not_in_Future</fullName>
    <active>true</active>
    <errorConditionFormula>IF( VALUE(Year__c) &gt; YEAR(TODAY()) + 1, true, false)</errorConditionFormula>
    <errorDisplayField>Year__c</errorDisplayField>
    <errorMessage>Please Enter Bus Year Accurately</errorMessage>
</ValidationRule>
